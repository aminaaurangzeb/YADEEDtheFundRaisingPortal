<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/checkfields.js">
    </script>
    <link rel="stylesheet" type="text/css" href="~/Content/StyleSheet.css" />
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
</head>
<body>
    <!-- inline CSS on div tag;  external CSS on text boxes;-->
    <heading2>Enter Your Sign Up Details </heading2>

    <form method="post" onsubmit="return checkForFieldsSignUp();" action="./authenticate1">
        <fieldset class="outerrec">
            <div class="inputlabel" id="f">
                <br />
                <label> Name:</label>
                <br />
                <input name="name" type="text" id="nameField" /> </input>
                <br />
                <br />
                <label> Email:</label> <br /> <input name="Email" type="text" id="EmailField"> </input>
                <br />
                <br />
                <label> CNIC:</label> <br /> <input name="cnic" type="text" id="cnicField"> </input>
                <br />
                <br />
                <label> Password:</label><br /><input name="Password" type="password" id="PasswordField"> </input>
                <br />
                <br />
                <label> Date of birth:</label><br /> <input name="dob" type="date" id="dobField"> </input>
                <br />
                <br />
                <label> Gender:</label> <br />
                <enter>
                    <select name="gender">

                        <option value="undefined">Undefined</option>
                        <option value="female">Female</option>
                        <option value="trans">Transgender</option>
                        <option value="male">Male</option>

                    </select>
                </enter>
                <br />
                <br />
                <label> Phone number:</label> <br /> <label>+92</label> <input name="phonenum" type="tel" id="phonenumField"> </input>
                <br />
                <br />
            </div>
            <enter>
                <input type="submit" id="loginButton" value="SIGN UP" /> <label id="status"></label>
            </enter>
            <br />
            <br />
        </fieldset>
    </form>
    <br />
    <br />
    <br />
    <br />
</body>
</html>

